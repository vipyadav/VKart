@model VKart.Models.Customer
@{
    ViewBag.Title = "Customer Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Membership Type: @Model.MembershipType.Name</li>
    <li>Discount Rate: @Model.MembershipType.DiscountRate%</li>
    <li>Duration In Months: @Model.MembershipType.DurationInMonths</li>
    <li>Sign-Up Fee: @Model.MembershipType.SignUpFee$</li>
</ul>